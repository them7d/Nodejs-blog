<div class="dashboard-title flex w-full justify-between mb-4">
      <h2 class="text-xl">Posts</h2>
      <a href="/add-post">
            <button class="inline-flex text-white border-0 py-2 px-6 focus:outline-none rounded text-lg underline">
                  add post +
            </button>
      </a>
</div>
<ul class="admin-post">
      <% data.forEach(post=> { %>
            <li class="flex justify-between mb-5">
                  <a href="/post/<%= post._id%>" class="underline">
                        <h2>
                              <%= post.title %> &nearr;
                        </h2>
                  </a>
                  <div class="flex">
                        <a href="/edit-post/<% post._id %>" class="mr-3">
                              <button
                                    class="inline-flex text-white  border-0 py-1 px-6 focus:outline-none bg-slate-500 rounded text-lg">
                                    Edit
                              </button>
                        </a>
                        <form action="/delete-post/<%- post._id %>?_method=DELETE" method="POST">
                              <input type="submit"
                                    class="inline-flex text-white  border-0 py-1 px-6 focus:outline-none bg-red-700 rounded text-lg"
                                    value="Delete">
                        </form>
                  </div>
            </li>
            <% }) %>
</ul>